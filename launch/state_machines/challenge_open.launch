<?xml version="1.0" encoding="UTF-8"?>
<!-- Checkout README.md to see when to use this launch file -->
<launch>
	<group ns="amigo">
		<!-- NAVIGATION -->
		<include file="$(find robot_launch_files)/launch/navigation/navigation.launch">
			<arg name="machine" value="amigo2" />
		</include>

		<!-- WORLD MODEL -->
		<include file="$(find robot_launch_files)/launch/world_modeling/world_model.launch">
			<arg name="machine" value="amigo2" />
			<arg name="faces_db" value="~/MEGA/data/$(optenv ROBOT_ENV robotics_testlabs)/models/openface_ros/faces.pkl" />
		</include>

		<!-- Launch the websocket server (communication via roslib) -->
		<node name="rosbridge_websocket_amigo2" pkg="rosbridge_server" type="rosbridge_websocket" output="log">
			<param name="authenticate" value="false" />
			<param name="port" value="9090"/>
			<param name="address" value=""/>
			<remap from="/amigo/hmi/string" to="/amigo/message_to_ros" />
		</node>

		<!-- Start the simple webserver to handle static files -->
		<node pkg="tue_mobile_ui" type="webserver.py" name="webserver_amigo2" output="log">
			<rosparam command="load" file="$(env ROBOT_BRINGUP_PATH)/parameters/interaction/mobile_ui_server.yaml" />
		</node>
	</group>

	<node name="conversation_engine" pkg="conversation_engine" type="engine" output="log" required="true" args="--robot amigo">
        <param name="robot" value="amigo" />
        <param name="challenge" value="challenge_open" />
		<remap from="robot_to_user" to="/amigo/message_from_ros" />
		<remap from="user_to_robot" to="/amigo/message_to_ros" />
	</node>

	<!-- Action server state machine -->
	<node name="state_machine" pkg="action_server" type="main.py" output="log" required="false" respawn="true">
		<param name="robot_name" value="amigo" />
	</node>
</launch>
